acl "trusted" {
        127.0.0.0/8;
        10.0.0.0/16;
};

options {
        directory "/var/cache/bind";

        recursion yes;
        allow-query { trusted; };
        allow-transfer { none; };

        listen-on port 53 { 127.0.0.1; 10.0.20.2; }; // Rewrite Server IP
        listen-on-v6 { none; };

        forwarders {
                8.8.8.8;
                1.1.1.1;
        };

        dnssec-validation auto;
};
